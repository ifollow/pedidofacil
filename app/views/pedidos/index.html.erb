
<%= render 'shared/menu' %>
<div class="container">

<table id="pattern-style-b" summary="Meeting Results" class="pedidos">
  <thead>
    <tr>
      <th scope="col">Produto</th>
      <th scope="col">Mesa</th>
      <th scope="col">Observacao</th>
      <th scope="col">Funcionário</th>
      <th scope="col">Situação</th>
      <th scope="col"></th>
      <th scope="col"></th>
      
    </tr>
  </thead>

  <tbody>
  <div>
    <% @pedidos.each do |pedido| %>
      <tr  id="pedidos" data-id="<%= pedido.id %>" data-time="<%= pedido.created_at.to_i %>">
        <td ><%= pedido.produto.nome %></td>
        <td><%= pedido.mesa.numero %></td>
        <td><%= pedido.observacao %></td>
       
        <%  funcionario  =  Funcionario.find(pedido.funcionario_id) %>
        <td><%= funcionario.nome %></td>
         <% if pedido.flag %>
        <td>Pago</td>
        <% else %>
        <td>Em aberto</td>
        <% end %>
        <% if pedido.flag %>

        <% else %>
        <td><%= link_to 'Fechar', fechamento_balcao_path(pedido)  %></td>
        <% end %>
        <td><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
        
      </tr>
    <% end %>
    </div>
  </tbody>
</table>


<br>

<%= link_to 'Realizar pedido', new_pedido_path, :style => "width:130px; margin-left:40px; padding-left:10px; padding-top:10px; height:20px; border:none; background:#01334e; color:white; float:left; text-decoration:none;" %>
</div>


